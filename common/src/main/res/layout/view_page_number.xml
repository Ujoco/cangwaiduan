<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvUp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x70"
        android:background="@drawable/book_page_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="上一页"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvOne" />

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="@dimen/x39"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x41"
        android:background="@drawable/book_action_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="1"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvUp"
        app:layout_constraintRight_toLeftOf="@id/tvTwo" />

    <TextView
        android:id="@+id/tvTwo"
        android:layout_width="@dimen/x39"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x41"
        android:background="@drawable/book_action_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="2"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvOne"
        app:layout_constraintRight_toLeftOf="@id/tvThree" />

    <TextView
        android:id="@+id/tvThree"
        android:layout_width="@dimen/x39"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x41"
        android:background="@drawable/book_action_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="3"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvTwo"
        app:layout_constraintRight_toLeftOf="@id/tvFour" />

    <TextView
        android:id="@+id/tvFour"
        android:layout_width="@dimen/x39"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x19"
        android:background="@drawable/book_action_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="4"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvThree"
        app:layout_constraintRight_toLeftOf="@id/tvLot" />

    <TextView
        android:id="@+id/tvLot"
        android:layout_width="@dimen/x39"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x19"
        android:background="@drawable/book_page_selector"
        android:gravity="center"
        android:text="......"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvFour"
        app:layout_constraintRight_toLeftOf="@id/tvLast" />

    <TextView
        android:id="@+id/tvLast"
        android:layout_width="@dimen/x39"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x21"
        android:background="@drawable/book_action_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="80"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvLot"
        app:layout_constraintRight_toLeftOf="@id/tvDown" />

    <TextView
        android:id="@+id/tvDown"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x41"
        android:background="@drawable/book_page_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="下一页"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvLast"
        app:layout_constraintRight_toLeftOf="@id/etInputPage" />

    <EditText
        android:id="@+id/etInputPage"
        android:layout_width="@dimen/x39"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x14"
        android:background="@drawable/book_action_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:inputType="number"
        android:textColor="#ffffff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/tvDown"
        app:layout_constraintRight_toLeftOf="@id/tvSkip" />

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/book_page_selector"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="跳转"
        android:textColor="#0096ff"
        android:textSize="@dimen/x21"
        app:layout_constraintLeft_toRightOf="@id/etInputPage"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>