<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvErrorConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未连接服务器"
        android:textColor="@color/red"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="@id/tvRootName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvRootName" />

    <TextView
        android:id="@+id/tvRootName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x17"
        android:layout_marginTop="@dimen/x15"
        android:textColor="@color/white"
        android:textSize="@dimen/x27"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x38"
        android:text="2019-10-10 22:10:10"
        android:textColor="@color/white"
        android:textSize="@dimen/x27"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/tvRootName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvRootName" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlList"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x450"
        android:layout_marginBottom="@dimen/x320"
        android:paddingLeft="@dimen/x52"
        android:paddingRight="@dimen/x52"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x72"
        android:layout_marginRight="@dimen/x61"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="@dimen/x35"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x33"
        android:layout_marginRight="@dimen/x11"
        android:src="@mipmap/main_back"
        app:layout_constraintBottom_toBottomOf="@id/tvBack"
        app:layout_constraintRight_toLeftOf="@id/tvBack"
        app:layout_constraintTop_toTopOf="@id/tvBack" />

</androidx.constraintlayout.widget.ConstraintLayout>