<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/CommonFragmentStyleColor"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x25"
        android:layout_marginBottom="@dimen/x25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.bin.david.form.core.SmartTable
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <TextView
        android:text="往期诊单"
        android:textSize="@dimen/x26"
        android:id="@+id/tvBefore"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/x23"
        android:gravity="center"
        app:bl_selected_stroke_color="#474747"
        app:bl_unSelected_stroke_color="#474747"
        app:bl_stroke_width="@dimen/x3"
        android:layout_marginRight="@dimen/x17"
        android:layout_width="@dimen/x127"
        android:layout_height="@dimen/x41"/>
</androidx.constraintlayout.widget.ConstraintLayout>