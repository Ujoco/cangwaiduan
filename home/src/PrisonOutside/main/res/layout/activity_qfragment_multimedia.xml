<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".qfragment.Discipline.QFragmentMultimedia">

    <ImageView
        android:id="@+id/img_entertainment"
        android:layout_width="@dimen/x913"
        android:layout_height="@dimen/x51"
        android:src="#1F417C"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/x28"
        android:layout_marginLeft="@dimen/x28"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="娱乐节目"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/x30"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/x31"
        android:layout_marginLeft="@dimen/x50"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_entertainment"
        android:layout_width="@dimen/x980"
        android:layout_height="@dimen/x670"
        android:layout_marginLeft="@dimen/x28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_entertainment"


        app:fastScrollEnabled="true"
        app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
        app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
        app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
        app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/img_save"
        android:layout_width="@dimen/x913"
        android:layout_height="@dimen/x51"
        android:src="#1F417C"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/x28"
        android:layout_marginLeft="@dimen/x981"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自救视频"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/x30"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/x31"
        android:layout_marginLeft="@dimen/x1013"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_save"
        android:layout_width="@dimen/x980"
        android:layout_height="@dimen/x670"
        android:layout_marginLeft="@dimen/x981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_save"

        app:fastScrollEnabled="true"
        app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
        app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
        app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
        app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:layout_width="@dimen/x111"
        android:layout_height="@dimen/x52"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/x747"
        android:src="@mipmap/sowing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>