<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameCamera"
        android:layout_width="@dimen/x805"
        android:layout_height="@dimen/x495"
        android:layout_marginLeft="@dimen/x40"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="@dimen/x360"
        android:layout_height="@dimen/x221"
        android:layout_marginBottom="@dimen/x19"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnFix"
        app:layout_constraintLeft_toRightOf="@id/frameCamera"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/btnFix"
        android:layout_width="@dimen/x132"
        android:layout_height="@dimen/x43"
        android:layout_marginTop="@dimen/x306"
        android:layout_marginRight="@dimen/x168"
        android:gravity="center"
        android:text="回监确认"
        android:textColor="@color/white"
        android:textSize="@dimen/x31"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/x8"
        app:bl_solid_color="#2E4E96"
        app:bl_stroke_color="#4C9CFF"
        app:bl_stroke_width="@dimen/x1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="@dimen/x360"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x40"
        android:text="姓名：李晓明\n\n编号：0101011\n\n时间：2019年11月01日 17:30"
        android:textColor="#474747"
        android:textSize="@dimen/x26"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/frameCamera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFix" />

</androidx.constraintlayout.widget.ConstraintLayout>